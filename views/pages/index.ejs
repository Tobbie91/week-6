<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="body" style="background-color:#87A2FB; height: 200%; min-height: 100vh; display: flex; flex-direction:column;">
  <%- include('../partials/header'); %>

     <!-- Background image -->
  <div
  class="p-5 text-center bg-image"
  style=" 
  background-image: url('https://unsplash.com/photos/n_IKQDCyrG0');
      height: 200px;">  
  <!-- <img style="width:500rem;" src="img/image10.jpeg" class="img-fluid"/> -->
  <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
    <div class="d-flex justify-content-center align-items-center">
      <div class="text-white">
        <h1 class="mb-3">WeAssist Hotels</h1>
        <h4 class="mb-3">Deluxe Superior Rooms...</h4>
        <a class="btn btn-outline-light btn-lg" href="#!" role="button"
        >CONTACT US</a
        >
      </div>
    </div>
  </div>
</div>
<!-- Background image -->
  
<main>
    <div class="container text-center p-5">
        <div class="row align-items-start">
          <% for(let i = 0; i<listings.length; i++) { %>
          <div class="col-md-3">
            
            <div class="card mb-4">
                <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                  <img src="<%= listings[i].image %>" class="img-fluid"/>
                  <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                  </a>
                </div>
                <div class="card-body">
                  <h5 class="card-title"><%- listings[i].name %></h5>
                  <p class="card-text"><%- listings[i].description %></p>
                  <a href="show" class="btn btn-primary">View</a>
                  <a href="#!" class="btn btn-primary"><%- listings[i].price %></a>
                </div>
              </div>

          </div>
          <% } %>
          </div>
        </div>
      
</main>

<%- include('../partials/footer'); %>
</body>
</html>

    
   
   